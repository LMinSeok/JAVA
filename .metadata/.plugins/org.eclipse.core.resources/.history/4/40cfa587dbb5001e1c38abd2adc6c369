package ex03;

public class exam01 {

	public static void main(String[] args) {
		
		int exam = 4000;
		
		int hour = exam/3600;
		int minute = (exam %3600)/60;
		int second = (exam %3600)%60;
		
		System.out.println("출력 : ");
		System.out.println(hour+"시간"+minute+"분"+second+"초");
		
		int a=5;
		int b=0;
		int c=0;
		int d=0;
		int e=0;
		
		b=a++;
		/*
		 * b=a;
		 * a++
		 */
		c = ++a;
		/*
		 * ++a;
		 * c=a;
		*/

	}

}
